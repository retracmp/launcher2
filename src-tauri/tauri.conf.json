{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Retrac",
  "version": "2.0.16",
  "identifier": "launcher.retrac.site",
  "build": {
    "beforeDevCommand": "yarn run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Retrac",
        "width": 936,
        "height": 600,
        "minWidth": 530,
        "maxWidth": 1200,
        "maxHeight": 800,
        "theme": "Dark",
        "windowClassname": "Retrac",
        "backgroundColor": "#2e2e2e",
        "decorations": false,
        "shadow": true,
        "maximizable": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "requireLiteralLeadingDot": false,
          "allow": ["**/**"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["retrac"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJGNDQ2QkQxNjc3NDIwODgKUldTSUlIUm4wV3RFTDNYNkRWQ2hZSlBxWktrRW5HUW82S2M1WFdxcFEwUXJhdjZlVy9VRldaM2IK",
      "endpoints": [
        "https://retrac.site/retrac/query_tauri_update/{{current_version}}"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
